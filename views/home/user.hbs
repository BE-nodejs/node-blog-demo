        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>

      <li><a href="#">&raquo;</a></li>
    </ul>
  </nav> -->
  <nav class="page-nav">
    <ul class="pagination">
      <li><a href="?page={{pager.prev}}">&laquo;</a></li>
      {{#each pager.pages}}
        <li {{#if isCurrentPage}} class="active" {{/if}}><a href="?page={{this}}">{{this}}</a></li>
      {{/each}}
      <li><a href="?page={{pager.next}}">&raquo;</a></li>
    </ul>
  </nav>

</div>
</body>
</html>
