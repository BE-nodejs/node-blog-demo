<html>
<head>
  {{>head}}
  <link rel="stylesheet" href="/stylesheets/home.css">
</head>

<body>

{{>home_header}}

<div class="container">

  {{#each pager.results}}
    <div class="post">
      <div class="page-header">
        <h3><a href="/post/{{id}}">{{title}}</a></h3>
        <small class="text-muted">{{detailDate date}}</small>
      </div>

      <div class="post-content">
        {{excerpt content}}
      </div>
    </div>
  {{/each}}

  <nav>
    <ul class="pagination">
      <li><a href="?page={{pager.prev}}">&laquo;</a></li>
      {{#each pager.pages}}
        <li><a href="?page={{this}}">{{this}}</a></li>
      {{/each}}
      <li><a href="?page={{pager.next}}">&raquo;</a></li>
    </ul>
  </nav>

</div>
</body>
</html>
